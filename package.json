{
  "name": "kitech_backend",
  "version": "1.0.0",
  "description": "API for kitech CRM",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test nyc mocha --require @babel/register 'src/**/**test.js' --timeout 100000 --exit",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test | coveralls",
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=development ./node_modules/.bin/nodemon --exec babel-node src/server.js",
    "lint": "./node_modules/.bin/eslint . --ext .js --fix",
    "build": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "postinstall": "npm-run-all clean build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KitechRW/Kitech_backend.git"
  },
  "keywords": [
    "nodejs",
    "mysql"
  ],
  "author": "kitech engineers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KitechRW/Kitech_backend/issues"
  },
  "homepage": "https://github.com/KitechRW/Kitech_backend#readme",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@sendgrid/mail": "^7.4.1",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "core-js": "^3.8.2",
    "cors": "^2.8.5",
    "coveralls": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "http-status": "^1.5.0",
    "joi": "^17.3.0",
    "joi-phone-number": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "mailgen": "^2.0.14",
    "mailgun-js": "^0.22.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mongoose": "^5.11.10",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "nodemailer-express-handlebars": "^4.0.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pdf-creator-node": "^1.4.2",
    "regenerator-runtime": "^0.13.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "5.1.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "npm run start:dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
